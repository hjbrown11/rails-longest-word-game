<h1>Welcome to the longest word game</h1>

<% @grid.each do |letter| %>
<ul>
<li><%= letter %></li>
</ul>
<% end %>
<form action="/score" method="post">
  <input type="text" name="answer" placeholder="What is your longest word?" value="<%= params[:answer] %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :data, @grid %>
  <input type="submit">
</form>
